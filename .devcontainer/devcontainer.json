{
  "name": "action-reporting-cli (node v22, npm v11)",
  "build": {
    "dockerfile": "Dockerfile",
    "args": {
      "VARIANT": "22"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": ["dbaeumer.vscode-eslint", "editorconfig.editorconfig", "esbenp.prettier-vscode"]
    }
  },
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "configureZshAsDefaultShell": true
    },
    "ghcr.io/devcontainers/features/github-cli": {}
  },
  "remoteUser": "node",
  "postCreateCommand": "npm install -g npm@11 && npm --version && npm install && npm run build --if-present"
}
